{
  "manifest_version": 2,
  "name": "Block 'Top Stories' on Facebook",
  "description": "Flips to 'Most Recent'",
  "version": "1.0",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon48.png"
  },
  "background": {
    "scripts": ["block_top_stories.js"],
    "persistent": true
  },
  "permissions": [
    "tabs"
  ]
}
